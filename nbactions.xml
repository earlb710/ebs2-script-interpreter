<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <!-- Run CommandLineApp (default) -->
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs></exec.vmArgs>
            <exec.args>${exec.vmArgs} -classpath %classpath com.eb.cli.CommandLineApp ${exec.appArgs}</exec.args>
            <exec.appArgs></exec.appArgs>
            <exec.mainClass>com.eb.cli.CommandLineApp</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    
    <!-- Debug CommandLineApp -->
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</exec.vmArgs>
            <exec.args>${exec.vmArgs} -classpath %classpath com.eb.cli.CommandLineApp ${exec.appArgs}</exec.args>
            <exec.appArgs></exec.appArgs>
            <exec.mainClass>com.eb.cli.CommandLineApp</exec.mainClass>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    
    <!-- Profile CommandLineApp -->
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs></exec.vmArgs>
            <exec.args>${exec.vmArgs} -classpath %classpath com.eb.cli.CommandLineApp ${exec.appArgs}</exec.args>
            <exec.mainClass>com.eb.cli.CommandLineApp</exec.mainClass>
            <exec.executable>java</exec.executable>
            <exec.appArgs></exec.appArgs>
        </properties>
    </action>
    
    <!-- Run ConsoleApp (JavaFX) -->
    <action>
        <actionName>CUSTOM-run-console</actionName>
        <displayName>Run ConsoleApp (JavaFX)</displayName>
        <goals>
            <goal>clean</goal>
            <goal>javafx:run</goal>
        </goals>
    </action>
    
    <!-- Run ServerApp (REST API) -->
    <action>
        <actionName>CUSTOM-run-server</actionName>
        <displayName>Run ServerApp (REST API)</displayName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs></exec.vmArgs>
            <exec.args>${exec.vmArgs} -classpath %classpath com.eb.server.ServerApp ${exec.appArgs}</exec.args>
            <exec.appArgs></exec.appArgs>
            <exec.mainClass>com.eb.server.ServerApp</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>
